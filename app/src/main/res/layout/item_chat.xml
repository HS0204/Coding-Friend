<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/item_msg_chat_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:background="@drawable/msg_input_bg"
        android:backgroundTint="@color/send_msg_chat"
        android:padding="10dp">

        <TextView
            android:id="@+id/item_msg_chat_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="chat이 보낸 메세지"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_msg_user_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:background="@drawable/msg_input_bg"
        android:backgroundTint="@color/send_msg_user"
        android:padding="10dp">

        <TextView
            android:id="@+id/item_msg_user_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="유저가 보낸 메세지"
            android:textColor="@color/white" />

    </LinearLayout>


</RelativeLayout>