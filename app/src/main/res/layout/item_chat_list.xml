<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="2dp"
    android:layout_marginVertical="7dp"
    android:outlineSpotShadowColor="?attr/colorPrimary"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:id="@+id/item_chat_list_container_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp">

        <TextView
            android:id="@+id/item_chat_list_id_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_chat_list_title_tv"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="첫번째 질문" />

        <TextView
            android:id="@+id/item_chat_list_version_tv"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="버전" />

        <LinearLayout
            android:id="@+id/item_chat_list_date_container_ll"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_chat_list_date_mod_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="마지막 수정 일자" />

            <TextView
                android:id="@+id/item_chat_list_date_reg_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="최초 등록 일자" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>